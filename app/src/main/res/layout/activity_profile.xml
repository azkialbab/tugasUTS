<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_iknip"
            android:textSize="16sp"
            />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="250dp"
            android:src="@drawable/bell" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/titik" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/linear0"
        android:padding="8dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:importantForAccessibility="no"
            android:src="@drawable/pp" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_horizontal"
            android:text="6596
Postingan"
            android:textAlignment="center"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="3dp"
            android:gravity="center_horizontal"
            android:text="27,7
Pengikut"
            android:textAlignment="center"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="3dp"
            android:gravity="center_horizontal"
            android:text="219
Mengikuti"
            android:textAlignment="center"
            android:textStyle="bold"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1"
        android:layout_marginLeft="8dp"
        android:text="Ikhwan Hanipp"
        android:textStyle="bold"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginLeft="8dp"
        android:text="Programmer"
        android:textColor="@color/abu"
        android:textStyle="bold"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/status"
        android:layout_marginLeft="8dp"
        android:text="â€œYou might not think that programmers are  artists, but programming is an extremely creative profession. Itâ€™s  logic-based creativity.â€ â€“ John Romero  ðŸ’»"
        android:textSize="16sp"
        />

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@id/bio"
        android:gravity="center">

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Edit Profil"
            android:textColor="@color/black"
            android:elevation="5dp"
            android:backgroundTint="@color/abu1"/>

        <Button
            android:id="@+id/buttonOk"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Bagikan Profil"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:elevation="5dp"
            android:backgroundTint="@color/abu1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@id/linear2"
        android:gravity="center">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="80dp"
            android:src="@drawable/feed" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="80dp"
            android:src="@drawable/reels" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/tag" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="270dp"
        android:layout_below="@id/linear3"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="63dp"
            android:src="@drawable/home" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="63dp"
            android:src="@drawable/search" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="63dp"
            android:src="@drawable/upload" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="63dp"
            android:src="@drawable/reels" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/profile" />
    </LinearLayout>



</RelativeLayout>